<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".raw.motion.AccelerometerDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/measureSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_start_listening"
                android:padding="@dimen/screen_padding"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sensorValueLabelView"
                style="@style/App.Raw.Details.Section.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raw_details_label_values"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/measureSwitch" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_value_view"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/sensorValueLabelView"
                tools:text="" />

            <TextView
                android:id="@+id/sensorAccuracyLabelView"
                style="@style/App.Raw.Details.Section.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raw_details_label_accuracy"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/sensor_value_view" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_accuracy_view"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/sensorAccuracyLabelView"
                tools:text="" />

            <TextView
                android:id="@+id/sensorInfoLabelView"
                style="@style/App.Raw.Details.Section.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raw_details_label_info"
                app:layout_constraintTop_toBottomOf="@+id/sensor_accuracy_view" />

            <include layout="@layout/layout_sensor_info" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>