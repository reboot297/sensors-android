<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".RawDataActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/motion_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/raw_data_label_motion" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accelerometer_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_accelerometer"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/accelerometer_uncalibrated_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_accelerometer_uncalibrated"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gravity_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_gravity"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gyroscope_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_gyroscope"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gyroscope_uncalibrated_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_gyroscope_uncalibrated"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/linear_acceleration_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_linear_acceleration"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rotation_vector_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_rotation_vector"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/significant_motions_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_significant_motions"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/step_detector_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_step_detector"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/step_counter_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_step_counter"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/position_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/raw_data_label_position" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/game_rotation_vector_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_game_rotation_vector"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/geomagnetic_rotation_vector_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_geomagnetic_rotation_vector"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/magnetic_field_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_magnetic_field"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/magnetic_field_uncalibrated_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_magnetic_field_uncalibrated"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/proximity_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_proximity"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/environment_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/raw_data_label_environment" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ambient_temperature_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_ambient_temperature"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/light_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_light"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pressure_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_pressure"
            android:textSize="@dimen/raw_data_item_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/relative_humidity_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/raw_data_item_relative_humidity"
            android:textSize="@dimen/raw_data_item_text_size" />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>