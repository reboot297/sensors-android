<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".raw.motion.SignificantMotionsDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/screen_padding">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/measureSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_start_listening"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_value_view"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/measureSwitch"
                tools:text="" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_name_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_name"
                app:layout_constraintTop_toBottomOf="@+id/sensor_value_view" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_name_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_name_label"
                tools:text="Sensor Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_direct_report_rate_level_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_direct_report_rate_level"
                app:layout_constraintTop_toBottomOf="@id/sensor_name_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_direct_report_rate_level_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warning_api_26"
                app:layout_constraintTop_toBottomOf="@+id/sensor_direct_report_rate_level_label" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_id_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_id"
                app:layout_constraintTop_toBottomOf="@id/sensor_direct_report_rate_level_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_id_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warning_api_24"
                app:layout_constraintTop_toBottomOf="@+id/sensor_id_label" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_type_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_type"
                app:layout_constraintTop_toBottomOf="@id/sensor_id_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_type_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_type_label"
                tools:text="Sensor Type" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_type_id_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_type_id"
                app:layout_constraintTop_toBottomOf="@id/sensor_type_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_type_id_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_type_id_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_vendor_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_vendor"
                app:layout_constraintTop_toBottomOf="@id/sensor_type_id_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_vendor_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_vendor_label"
                tools:text="vendor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_version_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_version"
                app:layout_constraintTop_toBottomOf="@id/sensor_vendor_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_version_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_version_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_power_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_power"
                app:layout_constraintTop_toBottomOf="@id/sensor_version_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_power_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_power_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_max_range_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_max_range"
                app:layout_constraintTop_toBottomOf="@id/sensor_power_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_max_range_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_max_range_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_resolution_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_resolution"
                app:layout_constraintTop_toBottomOf="@id/sensor_max_range_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_resolution_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_resolution_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_min_delay_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_min_delay"
                app:layout_constraintTop_toBottomOf="@id/sensor_resolution_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_min_delay_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_min_delay_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_max_delay_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_max_delay"
                app:layout_constraintTop_toBottomOf="@id/sensor_min_delay_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_max_delay_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_max_delay_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_fifo_max_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_fifo_max"
                app:layout_constraintTop_toBottomOf="@id/sensor_max_delay_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_fifo_max_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_fifo_max_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_fifo_reserved_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_fifo_reserved"
                app:layout_constraintTop_toBottomOf="@id/sensor_fifo_max_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_fifo_reserved_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_fifo_reserved_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_is_wakeup_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_is_wakeup"
                app:layout_constraintTop_toBottomOf="@id/sensor_fifo_reserved_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_is_wakeup_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_is_wakeup_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_unit_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_unit"
                app:layout_constraintTop_toBottomOf="@id/sensor_is_wakeup_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_unit_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_unit_label"
                tools:text="unit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_reporting_mode_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_reporting_mode"
                app:layout_constraintTop_toBottomOf="@id/sensor_unit_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_reporting_mode_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sensor_reporting_mode_label"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_additional_info_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_additional_info"
                app:layout_constraintTop_toBottomOf="@id/sensor_reporting_mode_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_additional_info_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warning_api_24"
                app:layout_constraintTop_toBottomOf="@+id/sensor_additional_info_label" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_is_dynamic_label"
                style="@style/App.Raw.Details.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details_sensor_is_dynamic"
                app:layout_constraintTop_toBottomOf="@id/sensor_additional_info_value" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sensor_is_dynamic_value"
                style="@style/App.Raw.Details.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warning_api_24"
                app:layout_constraintTop_toBottomOf="@+id/sensor_is_dynamic_label" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>