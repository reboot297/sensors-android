<resources>

    <!-- Items -->
    <style name="App.Item">
        <item name="android:textAppearance">@style/App.TextAppearance.Body.Large</item>
        <item name="android:textSize">@dimen/app_raw_data_item_text_size</item>
    </style>

    <style name="App.Item.RawData">
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Item.Sample">
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Labels -->
    <style name="App.Label">
        <item name="android:textAppearance">@style/App.TextAppearance.Body.Large.Bold</item>
    </style>

    <style name="App.Label.RawDetails">
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
    </style>

    <style name="App.Label.Sample" />

    <!-- Values -->
    <style name="App.Value">
        <item name="android:textAppearance">@style/App.TextAppearance.Body.Large</item>
    </style>

    <style name="App.Value.RawDetails">
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
    </style>

    <style name="App.Value.RawSample">
        <item name="android:textColor">#ff8888ff</item>
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
    </style>

    <style name="App.Value.Sample" />


    <!-- Sections -->
    <style name="App.Section">
        <item name="android:textAppearance">@style/App.TextAppearance.Body.Large.Bold.White</item>
        <item name="android:textSize">@dimen/app_raw_data_section_text_size</item>
    </style>

    <style name="App.Section.RawDetails">
        <item name="android:background">@color/raw_data_section_background</item>
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="App.Section.RawData">
        <item name="android:background">@color/raw_data_section_background</item>
        <item name="android:paddingStart">@dimen/screen_padding</item>
        <item name="android:paddingEnd">@dimen/screen_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>