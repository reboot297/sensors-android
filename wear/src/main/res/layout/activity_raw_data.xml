<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_boxedEdges="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="16dp"
            android:paddingEnd="5dp"
            android:paddingBottom="48dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_view"
                style="@style/App.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raw_data_label" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accelerometer_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_accelerometer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accelerometer_uncalibrated_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_accelerometer_uncalibrated" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gravity_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_gravity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gyroscope_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_gyroscope" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gyroscope_uncalibrated_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_gyroscope_uncalibrated" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linear_acceleration_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_linear_acceleration" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rotation_vector_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_rotation_vector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/significant_motion_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_significant_motions" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/step_detector_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_step_detector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/step_counter_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_step_counter" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/game_rotation_vector_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_game_rotation_vector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/geomagnetic_rotation_vector_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_geomagnetic_rotation_vector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/magnetic_field_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_magnetic_field" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/magnetic_field_uncalibrated_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_magnetic_field_uncalibrated" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/orientation_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_orientation" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/proximity_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_proximity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ambient_temperature_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_ambient_temperature" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/light_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_light" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pressure_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_pressure" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/relative_humidity_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_relative_humidity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperature_button"
                style="@style/App.Button.Raw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_temperature" />
        </LinearLayout>
    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>
